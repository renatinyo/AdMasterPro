{
  "manifest_version": 3,
  "name": "AdMaster Pro - Google Ads Helper",
  "version": "1.0.0",
  "description": "Automatikusan beilleszti az AdMaster Pro által generált hirdetésszövegeket a Google Ads felületre.",
  "author": "RS Agency",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://ads.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "AdMaster Pro"
  },
  "content_scripts": [
    {
      "matches": ["https://ads.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_page": "options.html"
}
